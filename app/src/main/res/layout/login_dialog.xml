<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:rowCount="6"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_desktop_mac_black_24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/header"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/loginCategory"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="Login Name"
            android:text="Sosyal"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="67dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/loginNameIcon"
            android:src="@drawable/accno"
            />

        <TextView
            android:id="@+id/loginNameEt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/loginNameIcon"
            android:gravity="center_vertical"
            android:hint="Site Adı" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="122dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/loginEmailIcon"
            android:src="@drawable/user"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="122dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/copyEmail"
            android:src="@drawable/ic_content_copy_black_24dp"
            />

        <TextView
            android:id="@+id/loginEmailEt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/copyEmail"
            android:layout_toRightOf="@id/loginEmailIcon"
            android:gravity="center_vertical"
            android:hint="Email veya Kullanıcı Adı" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="182dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/loginPasswordIcon"
            android:src="@drawable/password1"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="182dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/copyPassword"
            android:src="@drawable/ic_content_copy_black_24dp"
            />

        <TextView
            android:id="@+id/loginPasswordEt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_toLeftOf="@id/copyPassword"
            android:layout_toRightOf="@id/loginPasswordIcon"
            android:gravity="center_vertical"
            android:hint="Şifre" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="247dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/loginWebsiteIcon"
            android:src="@drawable/www"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="247dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/goToWebsite"
            android:src="@drawable/ic_launch_black_24dp"
            />

        <TextView
            android:id="@+id/loginWebsiteEt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_toLeftOf="@id/goToWebsite"
            android:layout_toRightOf="@id/loginWebsiteIcon"
            android:gravity="center_vertical"
            android:hint="Website (İsteğe Bağlı)" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="307dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/loginNoteIcon"
            android:src="@drawable/document"
            />

        <TextView
            android:id="@+id/loginNoteEt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="290dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/loginNoteIcon"
            android:gravity="center_vertical"
            android:hint="Not (İsteğe Bağlı)" />


    </RelativeLayout>
</RelativeLayout>